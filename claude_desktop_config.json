{
  "mcpServers": {
    "tavily-search": {
      "command": "uv",
      "args": ["run", "python", "-m", "app.mcp.tavily_mcp_server"],
      "cwd": "/Volumes/Halle4/projects/ShoppingAssistant",
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}",
        "REDIS_URL": "redis://localhost:6379/0"
      },
      "description": "Tavily web search MCP server for product searches, prices, reviews, and availability"
    },
    "shopping-assistant": {
      "command": "uv",
      "args": ["run", "python", "/Volumes/Halle4/projects/ShoppingAssistant/app/mcp/shopping_assistant_mcp_server.py"],
      "cwd": "/Volumes/Halle4/projects/ShoppingAssistant",
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}",
        "REDIS_URL": "redis://localhost:6379/0"
      },
      "description": "ShoppingAssistant MCP server for hybrid product/review search with BM25, vector search, and cross-encoder reranking"
    }
  }
}